@import "mixins.less";
@import "variables.less";

//todo: all shared style in here
 
body {
    color: @brand-primary;
}
.clearfix{
    .clearfix();
}
.form-signin { 
    min-width: 300px;
    max-width: 300px;
   
    position: fixed;
    top: 50%;
    left: 50%;
    margin-top: -125px;
    margin-left: -150px;

    .form-signin-heading {
        text-align: center;
        width: 300px;
    }
     
    .form-signin-info {
        color: #BB0F3F;
    }

    .forgot-password {
        margin-top: 15px;
        color: #004E45; 
    }

    .form-control {
        position: relative;
        font-size: 16px;
        height: auto;
        padding: 10px;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }

    .form-signin-heading, .checkbox {
        margin-bottom: 10px;
    }

    .checkbox {
        font-weight: normal;
    }

    input[type="text"] {
       
        border-bottom-left-radius: 0 !important;
        border-bottom-right-radius: 0 !important;
        padding-left:35px;
        background:url("../images/iconSprite.png") 2px 0 no-repeat;
    }

    input[type="password"] {
        border-top-left-radius: 0 !important;
        border-top-right-radius: 0 !important;
        padding-left:35px;
        background:url("../images/iconSprite.png") 2px -35px no-repeat;
    }

    .form-signin-submit {
        margin-top: 10px;
        width: 100px;
    }

    & .form-control:focus {
        z-index: 2;
    }
}
.forgot_area {
    display: none;

    div {
        margin-top:10px;
    }

    input.Name {
        width: 305px;
        height: 22px;
        line-height: 22px;
        margin-bottom: -1px;
        padding-left: 35px;
        background: url("../images/iconSprite.png") 2px -1px no-repeat;
    }

    input.Id {
        width: 305px;
        height: 22px;
        line-height: 22px;
        margin-bottom: -1px;
        padding-left: 35px;
        background: url("../images/iconSprite.png") 2px -69px no-repeat;
    }
}
