/* Bug fixed & base setting
--------------------------------------------*/
/* Cross-Brower CSS3 style that support css3
-----------------------------------------------*/
body {
  color: #428bca;
}
.clearfix {
  *zoom: 1;
}
.clearfix:after {
  display: table;
  content: "";
  clear: both;
}
.form-signin {
  min-width: 300px;
  max-width: 300px;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -125px;
  margin-left: -150px;
}
.form-signin .form-signin-heading {
  text-align: center;
  width: 300px;
}
.form-signin .form-signin-info {
  color: #BB0F3F;
}
.form-signin .forgot-password {
  margin-top: 15px;
  color: #004E45;
}
.form-signin .form-control {
  position: relative;
  font-size: 16px;
  height: auto;
  padding: 10px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.form-signin .form-signin-heading,
.form-signin .checkbox {
  margin-bottom: 10px;
}
.form-signin .checkbox {
  font-weight: normal;
}
.form-signin input[type="text"] {
  border-bottom-left-radius: 0 !important;
  border-bottom-right-radius: 0 !important;
  padding-left: 35px;
  background: url("../images/iconSprite.png") 2px 0 no-repeat;
}
.form-signin input[type="password"] {
  border-top-left-radius: 0 !important;
  border-top-right-radius: 0 !important;
  padding-left: 35px;
  background: url("../images/iconSprite.png") 2px -35px no-repeat;
}
.form-signin .form-signin-submit {
  margin-top: 10px;
  width: 100px;
}
.form-signin .form-control:focus {
  z-index: 2;
}
.forgot_area {
  display: none;
}
.forgot_area div {
  margin-top: 10px;
}
.forgot_area input.Name {
  width: 305px;
  height: 22px;
  line-height: 22px;
  margin-bottom: -1px;
  padding-left: 35px;
  background: url("../images/iconSprite.png") 2px -1px no-repeat;
}
.forgot_area input.Id {
  width: 305px;
  height: 22px;
  line-height: 22px;
  margin-bottom: -1px;
  padding-left: 35px;
  background: url("../images/iconSprite.png") 2px -69px no-repeat;
}
